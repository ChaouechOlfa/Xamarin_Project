<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FairBooks.ISETTabbedPage">
  <!--Pages can be added as references or inline-->
    <ContentPage Title="Département éléctrique">
        <StackLayout Padding="50">
            <Label Text="GÉNIE ÉLECTRIQUE ET INFORMATIQUE INDUSTRIELLE - LES DIPLÔMES" FontSize="Medium" HorizontalOptions="Center"/>
            <Image Source="geni.JPG" WidthRequest="200" HeightRequest="500" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage> 
               
  <ContentPage Title="Département Informatique">
        <StackLayout Padding="50">
            <Label Text="Département d'informatique et de génie logiciel" FontSize="Medium" HorizontalOptions="Center"/>
            <Image Source="inf.png" WidthRequest="600" HeightRequest="500" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Département Mécanique">
        <StackLayout Padding="50">
            <Label Text="
Département de Génie Mécanique" FontSize="Medium" HorizontalOptions="Center"/>
            <Image Source="mec.jpg" WidthRequest="200" HeightRequest="500" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage>
</TabbedPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FairBooks.Cahiers">
    <ContentPage.Content>
        <!-- Opacity="0.8"-->
        <Frame  CornerRadius="18" Margin="10,10,10,10"  BackgroundColor="White" Padding="10,0,10,10">
        <ScrollView>
        <StackLayout>
            <Label Text="Cahiers, blocs et feuilles"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            
            <Image Source="ima.jpg" WidthRequest="300" HeightRequest="300" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
            <Image Source="im1.jpg" WidthRequest="300" HeightRequest="300" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
        </StackLayout>
        </ScrollView>
        </Frame>
    </ContentPage.Content>
</ContentPage>